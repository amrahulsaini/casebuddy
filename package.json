    "bcryptjs": "^3.0.3",
    "cropperjs": "^1.6.2",
    "jose": "^6.1.3",
    "lucide-react": "^0.555.0",
    "mysql2": "^3.11.5",
    "next": "16.0.4",
    "rahul": "^0.0.0",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "sharp": "^0.33.5",
    "tsx": "^4.21.0",
    "uuid": "^11.0.3"
  },
  "devDependencies": {
