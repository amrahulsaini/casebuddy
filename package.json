{
  "name": "casetool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "eslint",
    "seed:categories": "tsx scripts/seed-categories.ts",
    "import:products": "node scripts/import-products.js",
    "import:all": "powershell -ExecutionPolicy Bypass -File scripts/import-all-categories.ps1",
    "import:selective": "powershell -ExecutionPolicy Bypass -File scripts/import-selective.ps1",
    "fix:product-images": "node scripts/fix-product-images.js",
    "admin:create": "node scripts/create-admin-user.js",
    "db:main:create": "mysql -u root -p -e \"CREATE DATABASE IF NOT EXISTS case_main; CREATE USER IF NOT EXISTS 'case_main'@'localhost' IDENTIFIED BY 'main'; GRANT ALL PRIVILEGES ON case_main.* TO 'case_main'@'localhost'; FLUSH PRIVILEGES;\"",
    "db:main:schema": "mysql -u case_main -p case_main < database/case_main_schema.sql"
  },
  "dependencies": {
    "@google/genai": "^1.31.0",
    "@google/generative-ai": "^0.24.1",
